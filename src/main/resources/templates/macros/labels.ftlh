<#macro id>
    <label>
        <input type="number" name="id" placeholder="enter id">
    </label>
</#macro>

<#macro username>
    <label>
        <input type="text" name="username" placeholder="enter username">
    </label>
</#macro>

<#macro password>
    <label>
        <input type="password" name="password" placeholder="enter password">
    </label>
</#macro>